<!doctype html>
<html>
  <head>
    <title>Rafflecopter Platform Status</title>
    <script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/hogan.js/3.0.2/hogan.min.js"></script>
    <script src="index.js"></script>
  </head>

  <body>
    <header class="main-header">
      <div class="main-header__logo">
        <img src="logo.svg" />
        <a class="main-header__subscribe"
           href="https://github.com/Rafflecopter-Status/rafflecopter-status.github.io/issues">
          Subscribe to Updates?
        </a>
    </header>

    <section id="app">
      <section class="board">
        {{#systems}}
        <div class="system system--status-{{status}}">{{name}}</div>
        {{/systems}}
      </section>

      <section class="details">
        <h2 class="details__header">Current Incidents</h2>

        {{#open_issues}}
        <div class="issue issue--status-{{statuspage_status}}">
          <h3 class="issue__title ">{{title}}</h3>
          <div class="issue_systems">
            <h4>Affected Systems:</h4>
            <ul>
              {{#statuspage_systems}}
              <li>{{.}}</li>
              {{/statuspage_systems}}
            </ul>
          </div>
          <p class="issue_body">{{body}}</p>
        </div>
        {{/open_issues}}
      </section>

      <!-- TODO: incident history -->

      <footer class="main-footer">
        <!-- TODO: footer -->
      </footer>
    </section>
  </body>
</html>
