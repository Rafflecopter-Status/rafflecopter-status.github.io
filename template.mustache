<!doctype html>
<html>
  <head>
    <title>Rafflecopter Platform Status</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/hogan.js/3.0.2/hogan.min.js"></script>
    <script src="index.js"></script>
    <script src="https://use.typekit.net/pbn7plu.js"></script>
    <script>try{Typekit.load({ async: true });}catch(e){}</script>
    <link rel="stylesheet" href="out/main.css">
  </head>

  <body>
    <header class="main-header">
      <div class="main-header__logo">
        <img src="static/svg/logo.svg" />
      </div>
      <a class="main-header__subscribe"
         href="https://github.com/Rafflecopter-Status/rafflecopter-status.github.io/issues">
        Subscribe to Updates?
      </a>
    </header>

    <section id="app">
      <section class="board">
        {{#systems}}
        <div class="system system--status-{{status}}">
          <h3 class="system__title">{{name}}</h3>
          <span class="system__caption">Info here</span>
        </div>
        {{/systems}}
      </section>

      <section class="details">
        <h2 class="details__header">Current Incidents</h2>

        {{#open_issues}}
        <div class="issue issue--status-{{statuspage_status}}">
          <h3 class="issue__title ">{{title}}</h3>
          <div class="issue__systems">
            <h4>Affected Systems:</h4>
            <ul>
              {{#statuspage_systems}}
              <li>{{.}}</li>
              {{/statuspage_systems}}
            </ul>
          </div>
          <p class="issue__body">{{body}}</p>
        </div>
        {{/open_issues}}

        <a href="https://github.com/Rafflecopter-Status/rafflecopter-status.github.io/issues"
         class="history-btn btn btn--secondary btn--with-icon">
           <span class="btn__label">Full Incident History</span>
        </a>

      </section>

      <footer class="main-footer">
        <ul class="main-footer__links">
          <li>
            <a href="https://rafflecopter.com/"
               class="main-footer__link">Home</a>
          </li>
          <li>
            <a href="https://www.rafflecopter.com/terms-of-service"
               class="main-footer__link">Terms</a>
          </li>
          <li>
            <a href="https://www.rafflecopter.com/privacy-policy"
               class="main-footer__link">Privacy</a>
          </li>
          <li>
            <a href="https://www.rafflecopter.com/contact-us"
               class="main-footer__link">Contact</a>
          </li>
          <li>
            <a href="http://kb.rafflecopter.com"
               class="main-footer__link">Help</a>
          </li>
          <li>
            <a href="http://blog.rafflecopter.com"
               class="main-footer__link">Blog</a>
          </li>
        </ul>
      </footer>
    </section>
  </body>
</html>
